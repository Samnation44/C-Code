#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define HI 1
#define LO 2
#define INITIAL 3
#define MATCH 0

int rand_num(){
    srand(time(NULL));
    int x=rand()%21;
    return x;}
void intro(){
    printf("Try to guess a number (from 0 to 20) within 5 tries");
}
void get_guess(int* guess,int result){
    switch (result){
        case HI:
        printf("\nYour guess is too high. Try again:");
        scanf("%d",&*guess);
        break;
        case LO:
        printf("\nYour guess is too low. Try again:");
        scanf("%d",&*guess);
        break;
        case INITIAL:
        printf("\nEnter your guess:");
        scanf("%d",&*guess);
        break;
return;}}
int check(int guess,int number){
    int a;
    //printf("Guess:%d   Number:%d",guess,number);
    if (guess>number){
        a=HI;}
    if (guess<number){
        a=LO;}
    if (guess == number){
        a=MATCH;} 
    return(a); }
void exit_message(int result,int number){
    if (result == 0){
        printf("\nYou win! The number was %d",number);}
    else{
        printf("\nYou baboon! You've failed miserably! (The number was %d)",number);
    }
}
int main(void) {
    int guess,number,result;
    number=rand_num();
    intro();
    int t=rand_num();
    //printf("\n%d",t);
    get_guess(&guess,INITIAL);
    result=check(guess,number);
    if (result != MATCH){
        get_guess(&guess,result);
        result=check(guess,number);
        }
    if (result != MATCH){
        get_guess(&guess,result);
        result=check(guess,number);}
    if (result != MATCH){
        get_guess(&guess,result);
        result=check(guess,number);
        }
    if (result != MATCH){
        get_guess(&guess,result);
        result=check(guess,number);
       }
    exit_message(result,number);
    return (0); }
