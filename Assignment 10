#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define HI 1
#define LO 2
#define INITIAL 3
#define MATCH 0

int rand_num(){
    srand(time(NULL));
    int x=rand()%21;
    return x;}
void intro(){
    printf("Try to guess a number (from 0 to 20) within 5 tries");
}
void get_guess(int* guess,int result){
    switch (result){
        case HI:
        printf("\nYour guess is too high.\nTry again:");
        scanf("%d",&*guess);
        break;
        case LO:
        printf("\nYour guess is too low.\nTry again:");
        scanf("%d",&*guess);
        break;
        case INITIAL:
        printf("Enter your guess:");
        scanf("%d",&*guess);
        break;
    return;}
int check(int guess,int number);
void exit_message(int result,int number);
int main(void) {
    int guess,number,result;
    number=rand_num();
    intro();
    int t=rand_num();
    printf("\n%d",t);
    get_guess(&number,INITIAL);
    return (0);}
