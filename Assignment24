void sort_by_name(PERSONAL_INFO array[], int records){
    
}
/*******************************************/
int get_info(PERSONAL_INFO array[], int* records){
    FILE*input;
    int i=0;
    input=fopen("a24.txt","r");
    if(input!=NULL){
        while(fscanf(input,"%s %d %d",&array[i].name,&array[i].age,&array[i],id)!=EOF){
            i++;
        }

    }
    fclose(input);
    return(i);
}
