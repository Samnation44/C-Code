/********************************************/
int get_scores(int test[],int*num_stud){
    FILE*in_file;
    int i=0;
    in_file=fopen("Grades.txt","r");
    if(in_file==NULL){
        printf("Unable to open file test.txt");
        return 1;
    }
    else{
        while(fscanf(in_file,"%d",&test[i])!=EOF)
        i++;
        *num_stud=i;
        fclose(in_file);
        
    }
    return(0);
}
